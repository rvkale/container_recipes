BootStrap: localimage
From: pre.sif

%files
hdf5-1.12.0.tar.bz2   /opt
1.12.0                /opt

%post
. /etc/profile
export MODULEPATH=/usr/local/modulefiles/dev:/usr/local/modulefiles
export HDF5VER=1.12.0
module load openmpi
export CC=gcc
export CXX=g++
export FC=gfortran
cd /opt && \
tar xf /opt/hdf5-${HDF5VER}.tar.bz2 && \
cd /opt/hdf5-${HDF5VER} && \
./configure \
  --prefix=/usr/local/hdf5/${HDF5VER} \
  --enable-build-mode=production \
  --enable-fortran=yes \
  --enable-cxx=yes \
  --enable-hl=yes \
  --enable-static=yes \
  --enable-shared=yes && \
make -j$(nproc) && \
make install && \
cd /opt && \
rm -rf /opt/hdf5-${HDF5VER}
export CC=mpicc
export CXX=mpic++
export FC=mpifort
cd /opt && \
tar xf /opt/hdf5-${HDF5VER}.tar.bz2 && \
cd /opt/hdf5-${HDF5VER} && \
./configure \
  --prefix=/usr/local/hdf5/${HDF5VER} \
  --enable-build-mode=production \
  --enable-fortran=yes \
  --enable-hl=yes \
  --enable-parallel=yes \
  --enable-static=yes \
  --enable-shared=yes && \
make -j$(nproc) && \
make install && \
mkdir /usr/local/modulefiles/dev/hdf5 && \
cd /usr/local/modulefiles/dev/hdf5 && \
mv /opt/${HDF5VER} \
  /usr/local/modulefiles/dev/hdf5/${HDF5VER} && \
echo "#%Module" > .version && \
echo set ModulesVersion "${HDF5VER}" >> .version && \
cd /opt && \
rm -rf \
  /opt/hdf5-${HDF5VER} \
  /opt/hdf5-${HDF5VER}.tar.bz2
